s = "kiwi", i = 100, d = 3.14159, b = true, h = {'a': [123, 456, "789"]}

class TypeCheckMe
  def initialize() end
end

inst = TypeCheckMe.new()
failed = ((!s.is_a(String) ? 1 : 0)
        + (!i.is_a(Integer) ? 1 : 0)
        + (!d.is_a(Double) ? 1 : 0)
        + (!b.is_a(Boolean) ? 1 : 0)
        + (!inst.is_a(TypeCheckMe) ? 1 : 0)
        + (!inst.is_a(Object) ? 1 : 0)
        + (!null.is_a(None) ? 1 : 0)
        + (!h.is_a(Hash) ? 1 : 0)
        + (!h.a.is_a(List)? 1 : 0))

if failed > 0
  println("Test(s) failed: ${failed}")
else
  println("All tests passed!")
end