fn methods(package_name="")
  methods = __rlist__().methods

  if !package_name.empty()
    methods = methods.select(with (m) do return m.begins_with("${package_name}::") end)
  end

  return methods
end

for package_name in __rlist__().packages do
  println "package: ${package_name}\nmethods: ${methods(package_name)}\n"
end
