# a script for debugging and experimentation (and fun!)

# constants as default parameter values
const XYZ = 40

fn def_param(xyz: integer = XYZ)
  return xyz
end

println "default param: ${def_param()}"

# constants in a package
package PKGX
  const Z = "hello"

  fn package_scope()
    return PKGX::Z
  end
end

export "PKGX"

# constants in package scopes
println "package constant in global scope: ${PKGX::Z}"
println "package constant in package function scope: ${PKGX::package_scope()}"

# constants in global scope
println "global scope: ${XYZ}"

# constants in function scope
fn func_scope()
  return PKGX::Z
end

println "global function scope: ${func_scope()}"
