/# a script for experimentation and debugging. #/

test = with () do
  try
    println "${1 / 0}"
  finally
    println "try-finally complete"
  end

  try
    for i in [0 .. 1] do
      println "${i / 0}"
    end
  catch (err)
    println "an error occurred"
  finally
    println "try-catch-finally complete"
  end

  for i in [0 .. 1] do
    try
      println "${i / 0}"
    catch (err, msg)
      println "An error occurred: ${err}: ${msg}"
    finally
      println "try-catch-finally (in-loop) complete"
    end
  end
end

fn main()
  test()
end

main()