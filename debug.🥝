/# a script for experimentation and debugging. #/

fn stress_test_1()
  repeat 7 as n do
    string_size = 10**n
    println "string_size = 10**${n}              : ${string_size}"
    
    start = time::ticks()
    a = ("a" * string_size).chars()
    println "a = ('a' * string_size).chars()  : ${time::ticksms(time::ticks() - start)}ms"
    
    start = time::ticks()
    c = a[a.size() / 2]
    println "c = a[a.size() / 2]              : ${time::ticksms(time::ticks() - start)}ms"
    println "c.size()                         : ${c.size()}"
  
    start = time::ticks()
    b = a[1:-1]
    println "b = a[1:-1]                      : ${time::ticksms(time::ticks() - start)}ms"
    println "b.size()                         : ${b.size()}"
  
    start = time::ticks()
    sum = 0
    for i in a do
      sum += 1
    end
    println "for i in a do sum += 1 end       : ${time::ticksms(time::ticks() - start)}ms"
  
    println ""
  end
  
  /#
  ~/kiwi$ ./bin/kiwi debug
  string_size = 10**1              : 10
  a = ('a' * string_size).chars()  : 0.02432ms
  c = a[a.size() / 2]              : 0.014848ms
  c.size()                         : 1
  b = a[1:-1]                      : 0.013312ms
  b.size()                         : 8
  for i in a do sum += 1 end       : 0.03712ms
  
  string_size = 10**2              : 100
  a = ('a' * string_size).chars()  : 0.01792ms
  c = a[a.size() / 2]              : 0.012288ms
  c.size()                         : 1
  b = a[1:-1]                      : 0.014592ms
  b.size()                         : 98
  for i in a do sum += 1 end       : 0.223488ms
  
  string_size = 10**3              : 1000
  a = ('a' * string_size).chars()  : 0.040448ms
  c = a[a.size() / 2]              : 0.013568ms
  c.size()                         : 1
  b = a[1:-1]                      : 0.02944ms
  b.size()                         : 998
  for i in a do sum += 1 end       : 1.94637ms
  
  string_size = 10**4              : 10000
  a = ('a' * string_size).chars()  : 0.73728ms
  c = a[a.size() / 2]              : 0.0128ms
  c.size()                         : 1
  b = a[1:-1]                      : 0.423936ms
  b.size()                         : 9998
  for i in a do sum += 1 end       : 18.26ms
  
  string_size = 10**5              : 100000
  a = ('a' * string_size).chars()  : 6.9504ms
  c = a[a.size() / 2]              : 0.015616ms
  c.size()                         : 1
  b = a[1:-1]                      : 6.29094ms
  b.size()                         : 99998
  for i in a do sum += 1 end       : 185.505ms
  
  string_size = 10**6              : 1000000
  a = ('a' * string_size).chars()  : 65.4267ms
  c = a[a.size() / 2]              : 0.017664ms
  c.size()                         : 1
  b = a[1:-1]                      : 49.2321ms
  b.size()                         : 999998
  for i in a do sum += 1 end       : 1813.46ms
  
  string_size = 10**7              : 10000000
  a = ('a' * string_size).chars()  : 809.37ms
  c = a[a.size() / 2]              : 0.017664ms
  c.size()                         : 1
  b = a[1:-1]                      : 693.811ms
  b.size()                         : 9999998
  for i in a do sum += 1 end       : 17921ms
  #/
end