{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Kiwi",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-g",
                "${workspaceFolder}/kiwi/src/main.cpp",
                "-I${workspaceFolder}/kiwi/include",
                "-L/usr/lib",
                "-o",
                "${workspaceFolder}/bin/kiwi",
                // LD flags below
                "-lffi",
                "-ldl"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build task for the Kiwi project, including linking against libffi and libdl."
        }
    ]
}
